<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Simple Airbnb</a>
      <div class="ms-auto flex">
         <a class="btn btn-outline-primary my-2 my-sm-0 ms-2" href="/flats/new">Add Flat</a>
      </div>
  </div>
</nav>

<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our flats (<%= @flats.count %>)</h1>
    </div>
  </div>
  <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-md-4">
          <div class="card m-2 bg-light">
            <img src="https://source.unsplash.com/random/500x250" class="card-img-top" alt="...">
            <div class="card-body">
              <h3 class="card-title"><%= flat.name %></h3>
              <p><%= flat.address %></p>
               <div class="flex">
                <div class="flex">
                <i class="material-icons me-2">people</i>
                <%= flat.number_of_guests %>
                </div>
                <div class="flex ms-3">
                <i class="material-icons me-2">euro_symbol</i>
                <%= flat.price_per_night %>
                </div>
               </div>
            </div>
            <div class="card-actions">
            <%= link_to 'More info', flat_path(flat) %>
            <%= link_to 'Edit', edit_flat_path(flat), class: 'ms-3 text-warning' %>
            <%= link_to 'Remove', flat_path(flat), method: :delete, class: 'ms-3 text-danger' %>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
